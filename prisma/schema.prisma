// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  category    String
  description String?
  price       Float
  rentPrice   Float?
  owners      UserProduct[]  // Establishes a many-to-many relationship
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  products UserProduct[]  // Establishes a many-to-many relationship
}

model UserProduct {
  id       Int     @id @default(autoincrement())
  userId   Int
  productId Int

  user     User    @relation(fields: [userId], references: [id])
  product  Product @relation(fields: [productId], references: [id])
}

